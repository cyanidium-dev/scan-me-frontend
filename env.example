# ============================================
# Site Configuration
# ============================================
# Базовий URL сайту (використовується для метаданих, sitemap, robots.txt)
NEXT_PUBLIC_SITE_URL=https://yourdomain.com

# ============================================
# Firebase Configuration
# ============================================
# Firebase credentials для аутентифікації та бази даних
# Отримайте ці значення з Firebase Console: https://console.firebase.google.com/
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# ============================================
# Cloudinary Configuration
# ============================================
# Cloudinary credentials для завантаження фото користувачів
# Отримайте ці значення з Cloudinary Dashboard: https://cloudinary.com/console
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
NEXT_PUBLIC_CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
# Upload preset для завантаження фото (за замовчуванням: scan-me-photos)
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=scan-me-photos

# ============================================
# Telegram Bot Configuration
# ============================================
# Telegram Bot API credentials для відправки повідомлень
# Створіть бота через @BotFather в Telegram
TELEGRAM_BOT_ID=your-telegram-bot-id
TELEGRAM_CHAT_ID=your-telegram-chat-id

# ============================================
# BudgetSMS Configuration
# ============================================
# BudgetSMS API credentials для відправки SMS повідомлень
# Отримайте ці значення з BudgetSMS Dashboard: https://www.budgetsms.net/
# Детальна інструкція: дивіться BUDGETSMS_SETUP.md
BUDGETSMS_USERNAME=your-budgetsms-username
BUDGETSMS_USERID=your-budgetsms-userid
BUDGETSMS_HANDLE=your-budgetsms-handle
# Sender ID (ім'я відправника в SMS, за замовчуванням: ScanMe)
BUDGETSMS_FROM=ScanMe
# API URL (за замовчуванням: https://api.budgetsms.net/sendsms/)
# Використовуйте sendsms/ для реальної відправки, testsms/ тільки для тестування
BUDGETSMS_API_URL=https://api.budgetsms.net/sendsms/
